<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>13</LangVersion>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>CS2DumperSourceGenerator</Title>
    <Description>Automatically fetch new offsets from A2X's CS2 dumper on build.</Description>
    <Copyright>MIT</Copyright>
    <RepositoryUrl>https://github.com/Grovre/CS2DumperSourceGenerator</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>cs2;cs2 dumper;offsets;a2x</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.11.0">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.12.0" />
  </ItemGroup>

</Project>
